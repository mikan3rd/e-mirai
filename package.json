{
  "name": "yogeeen",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "14"
  },
  "scripts": {
    "backend": "yarn workspace backend",
    "frontend": "yarn workspace frontend",
    "lint": "eslint .",
    "lint:backend": "eslint ./packages/backend",
    "lint:frontend": "eslint ./packages/frontend",
    "codegen": "yarn frontend codegen && yarn eslint ./packages/frontend/graphql --fix"
  },
  "dependencies": {
    "@apollo/client": "3.3.20",
    "@prisma/client": "2.26.0",
    "@sentry/node": "6.8.0",
    "@sentry/react": "6.8.0",
    "@sentry/tracing": "6.8.0",
    "@sentry/webpack-plugin": "1.15.1",
    "dayjs": "1.10.5",
    "firebase": "8.7.0",
    "firebase-admin": "9.10.0",
    "graphql": "15.5.1"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "11.2.0",
    "@types/node": "14.17.4",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "dotenv": "8.6.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-import-resolver-webpack": "0.13.1",
    "eslint-plugin-emotion": "11.0.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "globby": "11.0.4",
    "prettier": "2.3.2",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.5"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint . --fix"
    ]
  }
}
